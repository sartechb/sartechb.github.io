---
import Layout from '../layouts/Layout.astro';
import { TimelineItem } from '../components/TimelineItem';
import workData from '../data/work.json';
---

<Layout title="Work Experience - Sarthak Bhandari">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-12">Work Experience</h1>

    <div>
      {workData.map((work, idx) => (
        <TimelineItem
          title={work.company}
          subtitle={work.title}
          location={work.location}
          duration={work.duration}
          description={work.description}
          iconType="work"
          isLast={idx === workData.length - 1}
          isCurrent={work.duration.end === 'Present'}
          client:load
        />
      ))}
    </div>
  </div>
</Layout>
